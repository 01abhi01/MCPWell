# Environment Configuration
GEMINI_API_KEY=your_gemini_api_key_here
APIGEE_BASE_URL=https://your-apigee-domain.com/api/v1
APIGEE_API_KEY=your_apigee_api_key_here
APIGEE_CLIENT_ID=your_apigee_client_id
APIGEE_CLIENT_SECRET=your_apigee_client_secret

# Database Portal Configuration
DB_PORTAL_BASE_URL=your_db_portal_base_url
DB_PORTAL_API_KEY=your_db_portal_api_key

# Metadata Inventory Portal Configuration  
METADATA_PORTAL_BASE_URL=your_metadata_portal_base_url
METADATA_PORTAL_API_KEY=your_metadata_portal_api_key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Server Configuration
MCP_SERVER_NAME=mcp-well-server
MCP_SERVER_VERSION=0.1.0
MCP_SERVER_PORT=8000

# LangGraph Configuration
LANGGRAPH_CHECKPOINT_BACKEND=memory
LANGGRAPH_MAX_ITERATIONS=10
LANGGRAPH_TIMEOUT=300

# Security Configuration
ENABLE_AUTH=true
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=10

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
CIRCUIT_BREAKER_EXPECTED_EXCEPTION_COUNT=3
